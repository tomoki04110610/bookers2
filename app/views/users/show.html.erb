<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "user_info", user: @user %>
      <%= render "/books/new", book: @booknew %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th><label for="book_title">Title</label></th>
            <th><label for="book_opinion">Opinion</label></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td> <%= link_to user_path(@user) do %> 
                    <%=  image_tag book.user.profile_image, size: "80x80" %>
                  <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
  </div>
</div>