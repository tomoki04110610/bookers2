<%= render "user_info", user: @user %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th><label for="book_title">Title</label></th>
      <th><label for="book_opinion">Opinion</label></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.profile_image, size: "80x80" %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>