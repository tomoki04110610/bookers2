<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "user_info", user: @user %>
      <%= render "/books/new", book: @booknew %>
    </div>
    <div class="offset-md-1"></div>
    <div class="col-md-8">
      <h1>User</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><h4>image</h4></th>
            <th><h4>name</h4></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no_image', size: "80x80" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>