<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "/users/user_info", user: @book.user %>
      <%= render "new", book: @booknew %>
    </div>
    <div class="offset-md-1"></div>
    <div class="col-md-8">
      <h1>Book detail</h1>
      <table class="table table-striped">
        <tbody>
          <td>
            <% if @book.user.profile_image.attached? %>
              <%= image_tag @book.user.profile_image, size: "100x100" %>
            <% else %>
              <%= image_tag 'no_image', size: "80x80" %>
            <% end %>
            <br>
            <%= link_to @book.user.name, user_path(@book.user_id) %>
          </td>
          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "Edit", edit_book_path(@book) %></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>