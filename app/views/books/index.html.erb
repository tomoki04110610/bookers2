<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "/users/user_info", user: @user %>
      <%= render "new", book: @booknew %>
    </div>
    <div class="offset-md-1"></div>
    <div class="col-md-8">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th><h4>Title</h4></th>
            <th><h4>Opinion</h4></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(80,80) %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
  </div>
</div>