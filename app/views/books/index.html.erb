<%= render "/users/user_info", user: @user %>
<%= render "new", book: @booknew %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th><h4>Title</h4></th>
      <th><h4>Opinion</h4></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(80,80) %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>