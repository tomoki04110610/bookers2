<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <p><label for="book_title">Title</label></p>
        <p><%= f.text_field :title, value: @book.title %></p>
        <p><label fot="book_opinion">Opinion</label></p>
        <p><%= f.text_area :body, value: @book.body %></p>
        <p><%= f.submit "Update Book", class: "btn btn-success" %></p>
      <% end %>
      <%= link_to "Show", book_path %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>