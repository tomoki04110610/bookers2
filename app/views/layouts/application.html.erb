<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/eea0cb5b59.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex">
          <div class="container d-flex">

            <span class="navbar-brand">
              <%= link_to "Bookers", root_path,class: "nav-link text-light" %>
            </span>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto d-flex">
                <li class="nav-item ">
                  <%= link_to user_path(current_user),class: "nav-link text-light" do %>
                    <i class="fa-solid fa-house"></i>Home
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to users_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-users"></i>Users
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to books_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-book-open"></i>Books
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to destroy_user_session_path, method: :delete,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-right-from-bracket"></i>Log out
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      <% else %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex">
          <div class="container d-flex">
            <span class="navbar-brand">
              <%= link_to "Bookers", root_path,class: "nav-link text-light" %>
            </span>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item text-ligth">
                  <%= link_to root_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-house"></i>Home
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to about_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-link"></i>About
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to new_user_registration_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-user-plus"></i>Sign up
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to new_user_session_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-right-to-bracket"></i>Log in
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      <% end %>
    </header>
  <main>
    <%= yield %>
  </main>
    <foot>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">CopyRight Infratop.inc</div>
        </div>
      </div>
    </foot>
  </body>
</html>
