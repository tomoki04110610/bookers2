<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/eea0cb5b59.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex">
          <div class="container d-flex">
            <span class="navbar-brand">
              <%= link_to "Bookers", root_path %>
            </span>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item text-ligth">
                  <%= link_to user_path(current_user) do %>
                    <i class="fa-solid fa-house" style="color: #ffffff;"></i>Home
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to users_path do %>
                    <i class="fa-solid fa-users" style="color: #ffffff;"></i>Users
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to books_path do %>
                    <i class="fa-solid fa-book-open" style="color: #ffffff;"></i>Books
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa-solid fa-right-from-bracket" style="color: #ffffff;"></i>Log out
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      <% else %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex">
          <div class="container d-flex">
            <span class="navbar-brand">
              <%= link_to "Bookers", root_path %>
            </span>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item text-ligth">
                  <%= link_to root_path do %>
                    <i class="fa-solid fa-house" style="color: #ffffff;"></i>Home
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to about_path do %>
                    <i class="fa-solid fa-link" style="color: #ffffff;"></i>About
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to new_user_registration_path do %>
                    <i class="fa-solid fa-user-plus" style="color: #ffffff;"></i>Sign up
                  <% end %>
                </li>
                <li class="nav-item text-ligth">
                  <%= link_to new_user_session_path do %>
                    <i class="fa-solid fa-right-to-bracket" style="color: #ffffff;"></i>Log in
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      <% end %>
    </header>

    <%= yield %>

    <foot>
      <p style="text-align: center">CopyRight Infratop.inc</p>
    </foot>
  </body>
</html>
